{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "bookwise-api",
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.10"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "ENVIRONMENT": "production"
  },
  "regions": ["sin1"],
  "functions": {
    "main.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}